sudo bash -lc 'find / -xdev -type f \( -perm -4000 -o -perm -2000 \) -print0 2>/dev/null | \
  xargs -0 -r -n1 sh -c '\''f="$1"; pkg=$(rpm -qf "$f" 2>/dev/null || echo "UNPACKAGED"); printf "%s %s\n" "$pkg" "$f"; if [ "$pkg" != "UNPACKAGED" ]; then rpm -Vf "$f" >/dev/null || echo "  CHANGED: $f"; fi'\'' _'
